# DON'T FORGET TO RENAME TO .env OR .env.local BEFORE PUSHING TO GIT

### DEVELOPMENT ONLY VARIABLES
# These variables need to be set for local development only

# Mandatory next-auth URL for localhost
NEXTAUTH_URL=http://app.localhost:3000
 
### PRODUCTION & DEVELOPMENT VARIABLES
# These variables need to be set for local development and when deployed on Vercel

# Change this to your own domain
NEXT_PUBLIC_ROOT_DOMAIN=vercel.pub

# Table prefix for this CMS install (important when sharing one database)
CMS_DB_PREFIX=tooty_

# Optional filesystem overrides for themes/plugins (comma-separated paths, absolute or workspace-relative)
THEMES_PATH=themes,../tootyCMS-themes
PLUGINS_PATH=plugins,../tootyCMS-plugins
# Optional custom GitHub repos (owner/repo). Defaults:
# TOOTY_THEME_REPO=Joseffb/tootyCMS-themes
# TOOTY_PLUGIN_REPO=Joseffb/tootyCMS-plugins
TOOTY_THEME_REPO=
TOOTY_PLUGIN_REPO=
# Optional custom branches for the repos above.
TOOTY_THEME_REPO_BRANCH=main
TOOTY_PLUGIN_REPO_BRANCH=main
# Optional: GitHub token used by Plugins/Themes Discover+Install to avoid strict anonymous rate limits.
# Generate a fine-grained token with read-only access to the theme/plugin repos.
TOOTY_GITHUB_TOKEN=

# Enable structured trace logs and SQL logging in debug mode only
DEBUG_MODE=false
# Optional trace profile and sink controls
TRACE_PROFILE=dev
TRACE_LOG_DIR=logs/traces
TRACE_RETENTION_DAYS=14
TRACE_MAX_FILES=60

# PostgreSQL database URL – get one here: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=
# Optional dedicated test DB URL used by integration/e2e scripts (falls back to POSTGRES_URL if empty)
POSTGRES_TEST_URL=

# Vercel Blob Storage for image media – currently in beta, please fill out this form for access: https://tally.so/r/nPDMNd. Setup instructions: https://vercel.com/docs/storage/vercel-blob/quickstart
BLOB_READ_WRITE_TOKEN=

# Optional AWS S3 fallback for image uploads when Vercel Blob is unavailable
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
# Optional upload mode override: auto | blob | s3 | dbblob
MEDIA_UPLOAD_PROVIDER=auto

# GitHub OAuth secrets for auth & login – generate these here: https://github-client-generator.vercel.app/
NEXTAUTH_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Optional additional OAuth providers
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_FACEBOOK_ID=
AUTH_FACEBOOK_SECRET=
AUTH_APPLE_ID=
AUTH_APPLE_SECRET=

# Vercel authentication token that can be found here: https://vercel.com/account/tokens
AUTH_BEARER_TOKEN=
# Vercel Project ID that can be found here: https://vercel.com/<org>/<project>/settings
PROJECT_ID_VERCEL=
# Vercel Team ID that can be found here: https://vercel.com/teams/<org>/settings
# Only required if you're using this with a Vercel team
TEAM_ID_VERCEL=

# OpenAI API key for AI text generation – get one here: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

NO_IMAGE_MODE=false
