{
  "id": "gdpr-consent",
  "name": "GDPR Consent",
  "description": "Site-level consent policy plugin for analytics collection controls.",
  "version": "0.1.0",
  "minCoreVersion": "0.2.x",
  "scope": "site",
  "capabilities": {
    "hooks": true,
    "adminExtensions": true,
    "contentTypes": false,
    "serverHandlers": false
  },
  "menu": {
    "label": "GDPR Consent",
    "path": "/app/plugins/gdpr-consent"
  },
  "settingsFields": [
    {
      "key": "bannerMessage",
      "label": "Banner Message",
      "type": "textarea",
      "placeholder": "We use analytics to improve this site."
    },
    {
      "key": "acceptText",
      "label": "Accept Button Text",
      "type": "text",
      "placeholder": "Accept",
      "defaultValue": "Accept"
    },
    {
      "key": "declineText",
      "label": "Decline Button Text",
      "type": "text",
      "placeholder": "Decline",
      "defaultValue": "Decline"
    },
    {
      "key": "denyOnDismiss",
      "label": "Treat Dismiss as Deny",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "key": "declineCooldownDays",
      "label": "Decline/Skip Cooldown (days)",
      "type": "number",
      "defaultValue": 1,
      "helpText": "How many days to hide the prompt after Decline or Dismiss."
    }
  ],
  "developer": "Fernain Betancourt",
  "website": "https://fernain.com",
  "distribution": "core"
}
