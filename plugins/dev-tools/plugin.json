{
  "id": "dev-tools",
  "name": "Dev Tools",
  "description": "Adds developer-focused dashboard tools and optional render hooks.",
  "version": "0.1.0",
  "minCoreVersion": "0.1.x",
  "scope": "core",
  "capabilities": {
    "hooks": true,
    "adminExtensions": true,
    "contentTypes": false,
    "serverHandlers": false
  },
  "menu": {
    "label": "Dev Tools",
    "path": "/plugins/dev-tools"
  },
  "settingsFields": [
    {
      "key": "showEnvironmentBanner",
      "label": "Show Environment Banner",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "key": "developmentLabel",
      "label": "Development Label",
      "type": "text",
      "placeholder": "Development",
      "defaultValue": "Development"
    },
    {
      "key": "productionLabel",
      "label": "Production Label",
      "type": "text",
      "placeholder": "Production",
      "defaultValue": "Production"
    }
  ]
}
