{
  "id": "hello-hamilton",
  "name": "Hello Hamilton",
  "description": "A Hello Dolly style plugin that surfaces a Hamilton quote in admin settings.",
  "version": "0.1.0",
  "minCoreVersion": "0.1.x",
  "scope": "site",
  "capabilities": {
    "hooks": true,
    "adminExtensions": true,
    "contentTypes": false,
    "serverHandlers": false
  },
  "menu": {
    "label": "Hello Hamilton",
    "path": "/app/plugins/hello-hamilton"
  },
  "settingsFields": [
    {
      "key": "showWidget",
      "label": "Show Floating Widget",
      "type": "checkbox",
      "defaultValue": true
    },
    {
      "key": "customQuotes",
      "label": "Custom Quotes",
      "type": "textarea",
      "placeholder": "One quote per line",
      "helpText": "Optional. Enter one quote per line to rotate your own set."
    },
    {
      "key": "showInDebug",
      "label": "Show quote in debug traces",
      "type": "checkbox"
    }
  ],
  "editor": {
    "snippets": [
      {
        "id": "hamilton-quote",
        "title": "Insert Hamilton Quote",
        "description": "Add default Hamilton quote callout.",
        "content": "> \"Those who stand for nothing fall for anything.\"\n\nâ€” Alexander Hamilton"
      }
    ]
  }
}
